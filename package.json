{
  "name": "colloqui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass": "^7.0.0",
    "node-sass-chokidar": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-scripts": "3.2.0",
    "react-transition-group": "^4.3.0",
    "serve": "^11.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-css": "node-sass-chokidar src/sass -o src/css",
    "watch-css": "npm run build-css && node-sass-chokidar src/sass -o src/css --watch",
    "launch-project": "npm-run-all start watch-css",
    "build-project": "npm-run-all build-css build start",
    "heroku-postbuild": "npm-run-all build-css build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
